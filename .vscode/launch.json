    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/work",
            "runtimeArgs": [
              "--inspect-brk",
              "${workspaceRoot}/work/node_modules/.bin/jest",
              "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229
          }      
    ]
}